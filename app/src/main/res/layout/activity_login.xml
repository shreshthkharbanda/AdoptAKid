<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5CDB95">


    <ProgressBar
        android:id="@+id/loginProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:progressTint="#05386B"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginPwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_text_border"
            android:text="Login"
            android:textColor="#F0FFFF"
            android:textSize="15sp"
            app:backgroundTint="#05386B" />

        <Button
            android:id="@+id/guestBtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUpBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_text_border"
            android:text="Continue as Guest"
            android:textColor="#fff"
            android:textSize="12sp"
            app:backgroundTint="#05386B" />

        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_text_border"
            android:text="Don't have an account yet? Sign up!"
            android:textColor="#fff"
            android:textSize="12sp"
            app:backgroundTint="#05386B" />

        <EditText
            android:id="@+id/loginUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:background="@drawable/custom_text_border"
            android:hint="E-mail"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/loginPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginUserName"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_text_border"
            android:hint="Password"
            android:inputType="textPassword" />
    </RelativeLayout>
</RelativeLayout>