<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5CDB95">

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="276dp"
        android:background="@drawable/custom_text_border"
        android:text="Login"
        android:textColor="#F0FFFF"
        android:textSize="15sp"
        app:backgroundTint="#05386B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/guestBtn"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_text_border"
        android:text="Continue as Guest"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        app:backgroundTint="#05386B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/custom_text_border"
        android:text="Don't have an account yet? Sign up!"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        app:backgroundTint="#05386B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guestBtn"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/loginPwd"
        android:layout_width="261dp"
        android:layout_height="60dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/custom_text_border"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/loginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/loginUserName"
        android:layout_width="261dp"
        android:layout_height="60dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/custom_text_border"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/loginPwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>